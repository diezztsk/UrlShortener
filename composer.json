{
    "name": "your-name-here/UrlShortener",
    "description": "UrlShortener plugin for CakePHP",
    "type": "cakephp-plugin",
    "require": {
        "cakephp/cakephp": "^3.4",
        "league/uri": "^4"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7|^6.0"
    },
    "autoload": {
        "psr-4": {
            "UrlShortener\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "UrlShortener\\Test\\": "tests",
            "Cake\\Test\\": "./vendor/cakephp/cakephp/tests"
        }
    }
}
